<h1>New Candy</h1>

<% @errors.each do |error| %>
  <<h2><%= error %></h2>
<% end %>

<%= form_tag "/candies", method: :post do %>
  <div>
    Name: <input type="text" name="name"><%= @candy.name %>
  </div>
  <div>
    Description: <input type="text" name="description"><%= @candy.description %>
  </div>
  <div>
    Price: <input type="text" name="price"><%= @candy.price %>
  </div>
  <div class="black-text">
    Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>
  <input type="submit" value="Create Candy">
  <% end %>